<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Members Section -->
        <TextView
            android:id="@+id/section_members"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:padding="16dp"
            android:text="Members"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Chat Section -->
        <TextView
            android:id="@+id/section_chat"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:padding="16dp"
            android:text="Chat"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Blood Search Section -->
        <TextView
            android:id="@+id/section_blood_search"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:padding="16dp"
            android:text="Blood Search"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Fundraise Section -->
        <TextView
            android:id="@+id/section_fundraise"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:padding="16dp"
            android:text="Fundraise"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Locations Section -->
        <TextView
            android:id="@+id/section_locations"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/holo_purple"
            android:gravity="center"
            android:padding="16dp"
            android:text="Locations"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Personal Details Button -->
        <Button
            android:id="@+id/btn_personal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:layout_marginTop="16dp"
            android:backgroundTint="#0079C1"
            android:textColor="#FAFAFA" />

        <!-- Leave Community Button -->
        <Button
            android:id="@+id/btn_leave_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#B00020"
            android:text="Leave Community"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
