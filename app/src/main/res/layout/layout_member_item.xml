<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <!-- Profile Section -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/profile_placeholder"/>

    <!-- Member Info Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/memberName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Member Name"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/memberCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="College/University"
            android:textColor="@color/textSecondary"
            android:textSize="12sp"/>

        <!-- Badges Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/bloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O+"
                android:background="@color/blood_red"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/donationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:background="@color/green"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Call Button -->
    <ImageButton
        android:id="@+id/btnCall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/primary"
        android:src="@drawable/ic_call"
        android:tint="@color/white"
        android:scaleType="centerInside"
        android:padding="8dp"/>

    <!-- Status Indicator (hidden but needed for adapter) -->
    <View
        android:id="@+id/donationStatusIndicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <!-- Hidden fields for adapter compatibility -->
    <TextView
        android:id="@+id/memberLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/lastDonationDate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/membershipStatus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

</LinearLayout>
