<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAmountNeeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount Needed"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDonationMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donation Method"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnDeleteFundraiser"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Delete Fundraiser"
        android:backgroundTint="#DF6A45"
            android:visibility="gone" />

</LinearLayout>
